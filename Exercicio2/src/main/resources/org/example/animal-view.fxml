<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.AnimalController" stylesheets="@styles.css">
    <!-- Título -->
    <Label text="Criar Animal 🐕" styleClass="title-label" />

    <!-- Campo Nome -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nome:" />
        <TextField fx:id="nomeField" styleClass="text-field" />
    </HBox>

    <!-- Campo Idade -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Idade:" />
        <TextField fx:id="idadeField" styleClass="text-field" />
    </HBox>

    <!-- Campo Espécie -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Espécie:" />
        <TextField fx:id="especieField" styleClass="text-field" />
    </HBox>

    <!-- Botões -->
    <HBox spacing="10">
        <Button text="Criar Animal" onAction="#criarAnimal" styleClass="button" />
        <Button text="Emitir Som" onAction="#emitirSomAnimal" styleClass="button" />
    </HBox>

    <!-- Label de Resultado -->
    <Label fx:id="resultadoLabel" styleClass="result-label" />
</VBox>