<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.MainController">
    <!-- Título -->
    <Label text="Escolha uma Classe" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Grade de Botões -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <!-- Botão Animal -->
        <Button text="🐕 Animal" onAction="#abrirTelaAnimal" style="-fx-background-color: #FF6F61; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="0" />

        <!-- Botão Carro -->
        <Button text="🚗 Carro" onAction="#abrirTelaCarro" style="-fx-background-color: #6B5B95; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <!-- Botão Pessoa -->
        <Button text="👤 Pessoa" onAction="#abrirTelaPessoa" style="-fx-background-color: #88B04B; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="2" />

        <!-- Botão Jogo -->
        <Button text="🎮 Jogo" onAction="#abrirTelaJogo" style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="0" />

        <!-- Botão Produto -->
        <Button text="📦 Produto" onAction="#abrirTelaProduto" style="-fx-background-color: #0074D9; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <!-- Botão Livro -->
        <Button text="📚 Livro" onAction="#abrirTelaLivro" style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="2" />

        <!-- Botão Computador -->
        <Button text="💻 Computador" onAction="#abrirTelaComputador" style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="2" GridPane.columnIndex="0" />

        <!-- Botão Funcionário -->
        <Button text="💼 Funcionário" onAction="#abrirTelaFuncionario" style="-fx-background-color: #8B008B; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>
</VBox>