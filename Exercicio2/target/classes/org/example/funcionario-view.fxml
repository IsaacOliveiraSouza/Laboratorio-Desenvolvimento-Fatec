<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.FuncionarioController">
    <!-- Título -->
    <Label text="Criar Funcionário" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Campo Nome -->
    <HBox spacing="10">
        <Label text="Nome:" />
        <TextField fx:id="nomeField" />
    </HBox>

    <!-- Campo Cargo -->
    <HBox spacing="10">
        <Label text="Cargo:" />
        <TextField fx:id="cargoField" />
    </HBox>

    <!-- Campo Salário -->
    <HBox spacing="10">
        <Label text="Salário:" />
        <TextField fx:id="salarioField" />
    </HBox>

    <!-- Campo Percentual de Aumento -->
    <HBox spacing="10">
        <Label text="Percentual de Aumento (%):" />
        <TextField fx:id="aumentoField" />
    </HBox>

    <!-- Botões -->
    <Button text="Criar Funcionário" onAction="#criarFuncionario" fx:id="criarButton" />
    <Button text="Dar Aumento" onAction="#darAumento" />

    <!-- Label de Resultado -->
    <Label fx:id="resultadoLabel" style="-fx-font-size: 16px; -fx-text-fill: blue;" />
</VBox>